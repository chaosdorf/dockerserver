[Unit]
Description=db for Chaospizza
Documentation=https://github.com/chaosdorf/chaospizza
After=docker.service

[Service]
Type=simple
ExecStart=/usr/bin/docker start --attach --interactive chaospizza_postgresql_1
ExecStop=/usr/bin/docker stop chaospizza_postgresql_1

[Install]
WantedBy=multi-user.target
