[Unit]
Description=Publish the currently played music via MQTT
Documentation=https://gist.github.com/YtvwlD/41e65fa2afee1f71363e23ad14975954
After=docker.service

[Service]
Type=simple
ExecStart=/usr/bin/docker start --attach --interactive mpd2mqtt
ExecStop=/usr/bin/docker stop mpd2mqtt

[Install]
WantedBy=multi-user.target
