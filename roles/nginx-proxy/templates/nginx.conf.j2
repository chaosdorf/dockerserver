# {{ ansible_managed }}

user nginx;
worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  access_log off;
  error_log off;

  sendfile on;
  keepalive_timeout 65;

  server_names_hash_bucket_size 64;

  server {
    listen [::]:80 ipv6only=off;
    location / {
      proxy_pass "http://localhost:8000/";
    }
  }
}
